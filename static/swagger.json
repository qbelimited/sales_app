{
    "swagger": "2.0",
    "info": {
      "description": "This is the Sales Recording API.",
      "version": "1.0.0",
      "title": "Sales Recording API",
      "contact": {
        "email": "support@example.com"
      }
    },
    "host": "localhost:5000",
    "basePath": "/api/v1",
    "schemes": [
      "http"
    ],
    "paths": {
      "/sales": {
        "get": {
          "summary": "Get all sales records",
          "description": "Returns a list of all sales records.",
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "A list of sales",
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Sale"
                }
              }
            }
          }
        },
        "post": {
          "summary": "Create a new sale",
          "description": "Adds a new sale record.",
          "consumes": [
            "application/json"
          ],
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "Sale object that needs to be added",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Sale"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Sale created successfully"
            },
            "400": {
              "description": "Invalid input"
            }
          }
        }
      }
    },
    "definitions": {
      "Sale": {
        "type": "object",
        "required": [
          "sale_manager",
          "sales_executive",
          "branch",
          "telephone",
          "bank_name",
          "bank_branch",
          "bank_acc_number",
          "amount"
        ],
        "properties": {
          "sale_manager": {
            "type": "string",
            "example": "John Doe"
          },
          "sales_executive": {
            "type": "string",
            "example": "Jane Doe"
          },
          "branch": {
            "type": "string",
            "example": "Accra Central"
          },
          "telephone": {
            "type": "string",
            "example": "+233123456789"
          },
          "bank_name": {
            "type": "string",
            "example": "GCB Bank"
          },
          "bank_branch": {
            "type": "string",
            "example": "Accra Main"
          },
          "bank_acc_number": {
            "type": "string",
            "example": "1234567890"
          },
          "amount": {
            "type": "number",
            "example": 1500.50
          }
        }
      }
    }
  }
