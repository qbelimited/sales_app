{
  "swagger": "2.0",
  "info": {
    "description": "This is the Sales Recording API.",
    "version": "1.0.0",
    "title": "Sales Recording API",
    "contact": {
      "email": "support@example.com"
    }
  },
  "host": "localhost:5000",
  "basePath": "/api/v1",
  "schemes": [
    "http"
  ],
  "paths": {
    "/sales": {
      "get": {
        "summary": "Get all sales records",
        "description": "Returns a list of all sales records.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "A list of sales",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Sale"
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new sale",
        "description": "Adds a new sale record.",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Sale object that needs to be added",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Sale"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Sale created successfully"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/sales/{sale_id}": {
      "get": {
        "summary": "Get a sale by ID",
        "description": "Returns a sale record based on the sale ID.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "sale_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64",
            "description": "ID of the sale to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "Sale details",
            "schema": {
              "$ref": "#/definitions/Sale"
            }
          },
          "404": {
            "description": "Sale not found"
          }
        }
      },
      "put": {
        "summary": "Update a sale by ID",
        "description": "Updates a sale record based on the sale ID.",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "sale_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64",
            "description": "ID of the sale to update"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Updated sale object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Sale"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sale updated successfully"
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "Sale not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a sale by ID",
        "description": "Deletes a sale record based on the sale ID.",
        "parameters": [
          {
            "name": "sale_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64",
            "description": "ID of the sale to delete"
          }
        ],
        "responses": {
          "200": {
            "description": "Sale deleted successfully"
          },
          "404": {
            "description": "Sale not found"
          }
        }
      }
    }
  },
  "definitions": {
    "Sale": {
      "type": "object",
      "required": [
        "sale_manager",
        "sales_executive",
        "branch",
        "telephone",
        "bank_name",
        "bank_branch",
        "bank_acc_number",
        "amount"
      ],
      "properties": {
        "sale_manager": {
          "type": "string",
          "example": "John Doe"
        },
        "sales_executive": {
          "type": "string",
          "example": "Jane Doe"
        },
        "branch": {
          "type": "string",
          "example": "Accra Central"
        },
        "telephone": {
          "type": "string",
          "example": "+233123456789"
        },
        "bank_name": {
          "type": "string",
          "example": "GCB Bank"
        },
        "bank_branch": {
          "type": "string",
          "example": "Accra Main"
        },
        "bank_acc_number": {
          "type": "string",
          "example": "1234567890"
        },
        "amount": {
          "type": "number",
          "example": 1500.50
        },
        "sale_status": {
          "type": "string",
          "example": "pending",
          "description": "The status of the sale (e.g., pending, under investigation, completed)"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "example": "2024-09-01T12:34:56Z"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "example": "2024-09-02T14:23:45Z"
        }
      }
    }
  }
}
